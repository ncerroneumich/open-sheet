{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "item.schema.json",
    "title": "JSON Schema for D&D 5e physical item.",
    "description": "This schema describes physical item.",
    "$comment": "version 0.1.1",
    "type": "object",
    "required": ["name"],
    "properties": {
        "name": {
            "type": "string"
        },
        "weight": {
            "type": "number",
            "default": 0
        },
        "description": {
            "type": "string",
            "input": "textarea"
        },
        "magic": {
            "type": "boolean",
            "default": "false"
        },
        "source": {
            "$ref": "source.schema.json"
        }
    }
}