{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "feature.schema.json",
    "title": "JSON Schema for D&D 5e feature.",
    "description": "This schema describes a character feature.",
    "$comment": "version 0.1.1",
    "type": "object",
    "required": ["name"],
    "properties": {
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string",
            "input": "textarea"
        },
        "source": {
            "$ref": "source.schema.json"
        }
    }
}